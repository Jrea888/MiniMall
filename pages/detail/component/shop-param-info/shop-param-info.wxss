.param-info {
  overflow: hidden;
  padding: 40rpx 30rpx;
  border-bottom: 4px solid #f2f2f2;
}

.param-info .sizes .size-table .row {
  display: flex;
  align-items: center;
  height: 84rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.param-info .sizes .size-table .row .item {
  flex: 1;
  color: #666;
}

.param-info .infos {
  position: relative;
  margin-top: 60rpx;
}

.param-info .infos::before {
  position: absolute;
  left: -26rpx;
  top: -20rpx;
  content: "";
  width: 108%;
  height: 4px;
  background: #f2f2f2;
}

.param-info .info-row {
  display: flex;
  align-items: center;
  height: 84rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.param-info .info-row .key {
  width: 150rpx;
}

.param-info .info-row .value {
  flex: 1;
  color: #ff5777;
}