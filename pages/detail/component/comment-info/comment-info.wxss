.comment-info .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #666;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}

.comment-info .user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.comment-info .bottom {
  padding: 0 20rpx;
  color: #666;
  font-size: 32rpx;
}

.comment-info .bottom .context {
  font-size: 26rpx;
  text-indent: 48rpx;
  line-height: 48rpx;
}

.comment-info .user-info image {
  width: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.comment-info .bottom {
  border-bottom: 6px solid #f2f2f2;
}

.comment-info .bottom .context-params {
  font-size: 24rpx;
  margin-top: 18rpx;
  padding-bottom: 60rpx;
}