.shop-info {
  padding: 46rpx 16rpx 50rpx;
}

.header-info {
  display: flex;
  align-items: center;
}

.header-info image {
  width: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: 1px solid rgba(200, 200, 200, .6);
}

.shop-middle {
  display: flex;
  margin: 40rpx 0;
}

.shop-middle .left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 50rpx;
  border-right: 1px solid rgba(200, 200, 200, .6);
}

.shop-middle .left .l-itme {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.shop-middle .left .sells {
  font-size: 40rpx;
}

.shop-middle .left .l-text {
  color: #333;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.shop-middle .right {
  flex: 1;
  padding: 0 36rpx 0 50rpx;
}

.shop-middle .right .r-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shop-middle .right .r-item:nth-child(2) {
  margin: 6rpx 0;
}

.shop-middle .right .r-item .height {
  color: #ff5777;
}

.shop-middle .right .r-item .bottom {
  color: #5ea732;
}

.shop-middle .right .common-text {
  color: #333;
  font-size: 28rpx;
}

.entrance {
  display: flex;
  align-items: center;
}

.entrance button {
  padding: 8rpx 100rpx;
}